{
  "name": "@robgietema/nick",
  "description": "Nearly Headless CMS",
  "type": "module",
  "maintainers": [
    {
      "name": "Rob Gietema",
      "email": "rob.gietema@gmail.com",
      "url": "https://robgietema.nl"
    }
  ],
  "license": "MIT",
  "version": "2.8.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:robgietema/nick.git"
  },
  "bugs": {
    "url": "https://github.com/robgietema/nick/issues",
    "email": "info@nickcms.org"
  },
  "homepage": "https://nickcms.org",
  "keywords": [
    "cms"
  ],
  "scripts": {
    "bootstrap": "pnpm install && pnpm create-config && pnpm migrate && pnpm seed",
    "client": "tsx src/client_test.ts",
    "coverage": "vitest --coverage",
    "convert": "tsx scripts/convert.ts",
    "create-config": "cp -n config.js.sample config.js",
    "docs": "cd docs && bundle exec jekyll serve --baseurl=\"\"",
    "docs:install": "cd docs && bundler install",
    "i18n": "tsx scripts/i18n.ts",
    "i18n:ci": "pnpm i18n && git diff -G'^[^\"POT]' --exit-code",
    "knex": "tsx ./node_modules/knex/bin/cli.js",
    "lint": "./node_modules/eslint/bin/eslint.js --max-warnings=0 'src/**/*.{js,ts,json}' 'scripts/**/*.{js,ts,json}'",
    "migrate": "pnpm knex migrate:latest",
    "prettier": "./node_modules/.bin/prettier --single-quote --check 'src/**/*.{js,ts,json}' 'scripts/**/*.{js,ts,json}'",
    "seed": "tsx scripts/seed.ts run",
    "seed:status": "tsx scripts/seed.ts status",
    "seed:upgrade": "tsx scripts/seed.ts upgrade",
    "start": "nodemon --exec 'tsx src/server.ts'",
    "rollback": "pnpm knex migrate:rollback --all",
    "reset": "pnpm rollback && pnpm migrate && pnpm seed",
    "test": "AUTH_RATE_LIMIT=1000 vitest"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "engines": {
    "node": "^20 || ^22 || ^23 || ^24"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@babel/plugin-transform-typescript": "7.28.6",
    "@eslint/eslintrc": "3.3.4",
    "@eslint/js": "10.0.1",
    "@types/du": "1.0.3",
    "@types/express": "5.0.6",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mime-types": "3.0.1",
    "@types/node": "25.3.0",
    "@types/nodemailer": "7.0.11",
    "@types/pdf-parse": "1.1.5",
    "@types/supertest": "6.0.3",
    "@vitest/ui": "4.0.18",
    "eslint": "10.0.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "glob": "13.0.6",
    "jiti": "2.6.1",
    "pofile": "1.1.4",
    "prettier": "3.8.1",
    "supertest": "7.2.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.1",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "@formatjs/cli": "6.13.0",
    "@formatjs/intl": "4.1.2",
    "bcrypt": "6.0.0",
    "bcrypt-promise": "2.0.0",
    "du": "1.0.0",
    "es-toolkit": "1.44.0",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.3",
    "knex": "3.1.0",
    "log4js": "6.9.1",
    "mime-types": "3.0.2",
    "moment": "2.30.1",
    "node-cron": "4.2.1",
    "nodemailer": "8.0.1",
    "nodemon": "3.1.14",
    "objection": "3.1.5",
    "objection-table-name": "2.0.2",
    "pdf-parse": "2.4.5",
    "pg": "8.18.0",
    "sharp": "0.34.5",
    "slugify": "1.6.6",
    "tsx": "4.21.0",
    "uuid": "13.0.0"
  },
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a"
}
